<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="module_category_transportation" model="ir.module.category">
        <field name="name">Transportation</field>
        <field name="description">Transportation category</field>
        <field name="sequence" eval="10" />
    </record>

    <record id="group_transportation_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="comment">Managers Group</field>
        <field name="category_id" ref="module_category_transportation"/>
    </record>

    <record id="group_transportation_supervisor" model="res.groups">
        <field name="name">Supervisor</field>
        <field name="comment">Supervisors Group</field>
        <field name="category_id" ref="module_category_transportation"/>
    </record>

</odoo>