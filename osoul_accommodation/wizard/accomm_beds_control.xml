<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_room_bed_wizard_form" model="ir.ui.view">
        <field name="name">osoul.room.bed.wizard.form</field>
        <field name="model">osoul.accommodation.beds.control.wizard</field>
        <field name="arch" type="xml">
            <form string="Modify Beds" version="7.0">
                <group>
                    <field name="operation_type"/>
                    <field name="bed_count"/>
                </group>
                <footer>
                    <button name="modify_beds" string="Modify Beds" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-default" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>