<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="module_category_hr" model="ir.module.category">
        <field name="name">HR</field>
        <field name="description">hr</field>
        <field name="sequence" eval="10" />
    </record>

    <record id="group_hr_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="comment">Managers Group</field>
        <field name="category_id" ref="module_category_hr"/>
    </record>

    <record id="group_hr_supervisor" model="res.groups">
        <field name="name">Supervisor</field>
        <field name="comment">Supervisors Group</field>
        <field name="category_id" ref="module_category_hr"/>
    </record>

    <record id="group_hr_emp" model="res.groups">
        <field name="name">Employee</field>
        <field name="comment">Employee Group</field>
        <field name="category_id" ref="module_category_hr"/>
    </record>

</odoo>