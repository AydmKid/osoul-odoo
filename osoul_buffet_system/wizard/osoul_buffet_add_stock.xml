<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_buffet_stock_add_wizard_form" model="ir.ui.view">
        <field name="name">buffet.stock.add.wizard.form</field>
        <field name="model">buffet.stock.add.wizard</field>
        <field name="arch" type="xml">
            <form string="Add Stock Quantity">
                <group>
                    <field name="stock_id" readonly="1"/>
                    <field name="quantity_to_add"/>
                    <field name="reason"/>
                </group>
                <footer>
                    <button string="Add" type="object" name="add_quantity" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>